<Project Sdk="Microsoft.NET.Sdk">

  <!-- Assembly details -->
  <PropertyGroup>
    <ProjectGuid>e6177b22-b10a-4481-bf48-5daaf33a1611</ProjectGuid>

    <!-- Assembly and projecto details -->
    <!-- https://docs.microsoft.com/en-us/dotnet/standard/frameworks -->
    <TargetFrameworks>net6.0;net5.0;netcoreapp3.1</TargetFrameworks>


    <RootNamespace>PowerUtils.Net</RootNamespace>
    <AssemblyName>PowerUtils.Net.Primitives</AssemblyName>

    <Version>1.3.0</Version>

    <PackageOutputPath>bin\</PackageOutputPath>
  </PropertyGroup>


  <!-- Package details -->
  <PropertyGroup>
    <CurrentYear>$([System.DateTime]::UtcNow.ToString(yyyy))</CurrentYear>

    <PackageId>PowerUtils.Net.Primitives</PackageId>
    <title>PowerUtils.Net.Primitives</title>
    <Product>PowerUtils.Net.Primitives</Product>

    <Authors>Nelson Nobre</Authors>
    <Company>TechNobre</Company>

    <License>MIT</License>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Copyright>Copyright Â© $(CurrentYear) by TechNobre</Copyright>
    
    <Description>Provides additional types and constants for network-based libraries.</Description>
    <Summary>Provides additional types and constants for network-based libraries.</Summary>
    <PackageTags>PowerUtils;Utils;Net;Primitives;Types;Constants;Web</PackageTags>
    <PackageProjectUrl>https://github.com/TechNobre/PowerUtils.Net.Primitives</PackageProjectUrl>
    <NeutralLanguage>en-GB</NeutralLanguage>

    <PackageIcon>logo_128x128.png</PackageIcon>
    <PackageReadmeFile>README.nuget.org.md</PackageReadmeFile>

    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/TechNobre/PowerUtils.Net.Primitives</RepositoryUrl>
  </PropertyGroup>


  <!-- Source link -->
  <PropertyGroup>
    <Deterministic>true</Deterministic>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <ContinuousIntegrationBuild Condition="'$(GITHUB_ACTIONS)' == 'true'">true</ContinuousIntegrationBuild>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols Condition=" '$(DebugType)' != 'embedded' ">true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>


  <!-- DOCUMENTATION -->
  <PropertyGroup>
    <DocumentationFile>bin\PowerUtils.Net.Primitives.xml</DocumentationFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn> <!-- Prevent XML documentation warnings -->
  </PropertyGroup>


  <!-- Tests -->
  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>$(AssemblyName).Tests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>


  <ItemGroup Condition="'$(Configuration)'=='Release'">
    <None Include="..\assets\logo\logo_128x128.png" Pack="true" PackagePath="" />
    <None Include="..\LICENSE" Pack="true" PackagePath="" />
    <None Include="..\README.nuget.org.md" Pack="true" PackagePath="" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>


</Project>